<div class="mt-5">
<div class="container">
  <h1 class ="text-center">Create a booking</h1>
  <div class="row justify-content-center">
  <%=simple_form_for [@post, @booking] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="widget-content" data-unavailable="<%= @post.unavailable_dates.to_json %>"></div>

    <div class="form-inputs">
     <%= f.input :start_date, as: :string, label: 'Booking period', placeholder: "choose your dates" , wrapper_html: { class: "inline_field_wrapper" }%>
    </div>

    <div class="d-flex justify-content-between">
    <h2 id="total-price" data-price="<%= @post.price%>">
      $
    </h2>

    <div class="form-actions">
     <%= f.button :submit,  class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
  <%= image_tag "form_booking.jpg" %>
  </div>
</div>
</div>
