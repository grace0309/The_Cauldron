<div class="container d-flex justify-content-center mt-5 ">
  <div class="card-product">
    <img src="https://images.unsplash.com/photo-1551269901-5c5e14c25df7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" />
    <div class="card-product-infos">
      <div class="card-product-texts">
        <h3 class="item"><%= "#{@post.category.category}: #{@post.title}" %></h3>
        <h6 class="item"><%= @post.description %></h6>
        <h6 class="item"><%= @post.price %></h6>
        <h6 class="item"><%= "Owned by: #{@post.user.email}"%></h6>
      <%= link_to "Rent now", new_post_booking_path(@post), class: "btn-flat" %>
    </div>
    </div>
  </div>
</div>

